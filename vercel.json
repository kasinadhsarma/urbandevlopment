{
  "version": 2,
  "env": {
    "NEXT_PUBLIC_MAPBOX_TOKEN": "@mapbox_token",
    "NEXT_PUBLIC_API_URL": "@api_url"
  },
  "buildCommand": "npm run build",
  "installCommand": "pip install -r backend/requirements.txt && npm install",
  "builds": [
    {
      "src": "backend/main.py",
      "use": "@vercel/python@3.1.0",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9",
        "includedFiles": [
          "backend/ml/trafficanalysis/traffic_congestion_model.pkl",
          "backend/ml/trafficanalysis/scaler.pkl"
        ]
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}
