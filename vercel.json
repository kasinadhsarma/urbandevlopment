{
  "version": 2,
  "env": {
    "NEXT_PUBLIC_MAPBOX_TOKEN": "@mapbox_token",
    "NEXT_PUBLIC_API_URL": "@api_url"
  },
  "build": {
    "env": {
      "NEXT_PUBLIC_MAPBOX_TOKEN": "@mapbox_token",
      "NEXT_PUBLIC_API_URL": "@api_url"
    }
  },
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "functions": {
    "backend/main.py": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "builds": [
    {
      "src": "backend/main.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9"
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}
